<% locals.current = "index" %>
<% include ../layouts/_header %>
<% posts.forEach(function(post){ %>
  <div class="post">
    <% include ../layouts/_post %>
    <div class="comments">
      <a href="<%= post.url %>#comments">
        <span class="icon-bubbles"></span>Comments</a>
    </div>
  </div>
<% }) %>

<div class="pagination group">
  <% for (var i = 0; i < pages.length; i++) { %>
    <% var page = pages[i] %>
    <% if (i === currentIndex - 1) { %>
      <a href="<%= page.url %>" class="newer">Newer &#8594;</a>
    <% } else if (i === currentIndex + 1) { %>
      <a href="<%= page.url %>" class="older">&#8592; Older</a>
    <% } %>
  <% } %>
</div>
<% include ../layouts/_footer %>
