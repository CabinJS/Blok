extends ../layouts/base
block nav
  mixin nav('index')
block content
  each post in posts
    .post
      mixin post(post)
      div.comments
        a(href="#{post.url}#comments")
          span.icon-bubbles
          | Comments
  .pagination.group
    - for (var i = 0; i < pages.length; i++) {
      - var page = pages[i];
      - if (i === currentIndex - 1) {
        a.newer(href="#{page.url}") Newer &#8594;
      - } else if (i === currentIndex + 1) {
        a.older(href="#{page.url}") &#8592; Older
      - }
    - }
