extends ../layouts/base
block nav
  mixin nav('index')
block content
  each post in posts
    .post
      mixin post(post)
      div.comments
        a(href="#{data.baseUrl}#{post.url}#comments")
          span.icon-bubbles
          | Comments
  ul.pagination.group
    - for (var i = 0; i < pages.length; i++) {
      - var page = pages[i];
      - if (i === currentIndex - 1) {
        li.newer
          a(href="#{data.baseUrl}#{page.url}") Newer &#8594;
      - } else if (i === currentIndex + 1) {
        li.older
          a.active-page(href="#{data.baseUrl}#{page.url}") &#8592; Older
      - }
    - }

