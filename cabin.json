{
  "style": [
    "Sass"
  ],
  "template": [
    "Jade"
  ],
  "gruntPagesVersion": "0.4.1",
  "gruntPages": {
    "options": {
      "pageSrc": "src/pages"
    },
    "posts": {
      "src": "posts",
      "dest": "dist",
      "layout": "src/layouts/post.<%= templateLang %>",
      "url": ":title/",
      "options": {
        "pagination": {
          "postsPerPage": 2,
          "listPage": "src/pages/index.<%= templateLang %>"
        }
      }
    }
  }
}
